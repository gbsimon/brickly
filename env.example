# Rebrickable API Key
# Get your API key from: https://rebrickable.com/api/
# Copy this file to .env.local and add your actual API key
NODE_ENV=development
REBRICKABLE_API_KEY=

# Authentification  
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000
AUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true

NEXTAUTH_DEBUG=false

# Database  
DATABASE_URL=
POSTGRES_URL=
PRISMA_DATABASE_URL=

# Debug Flags (disabled by default)
# Set to "true" to enable debug features
# NEXT_PUBLIC_DEBUG_UI=true      # Enable debug panel UI
# NEXT_PUBLIC_DEBUG_CLIENT=true  # Enable verbose client-side logging
# DEBUG_API=true                 # Enable verbose API logging
# DEBUG_DB=true                  # Enable verbose database logging